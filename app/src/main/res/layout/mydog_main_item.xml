<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/ivProfileBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivAddProfile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:elevation="5dp"
        android:src="@drawable/ic_add"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="3dp" />


    <TextView
        android:id="@+id/tvProfileInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivAddProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="@string/addDog"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvProfileMeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProfileInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/ibBackground"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/ivProfileBackground"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_camera_alt_black_24dp"
        android:tint="@color/gray"
        android:visibility="invisible" />


</RelativeLayout>
