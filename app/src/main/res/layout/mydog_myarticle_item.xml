<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlMyArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civMyArticleAuthorPhoto"
                android:layout_width="40dp"
                android:layout_marginTop="5dp"

                android:layout_height="40dp"/>

            <TextView
                android:id="@+id/tvMyArticleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/civMyArticleAuthorPhoto"
                android:paddingLeft="10dp"
                android:textSize="16sp" />



        </RelativeLayout>

        <TextView
            android:id="@+id/tvMyArticleContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlMyArticle"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/ivMyArticlePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMyArticleContent"
            android:adjustViewBounds="true"/>


        <TextView
            android:id="@+id/tvLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivMyArticlePhoto"
            android:layout_margin="10dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
